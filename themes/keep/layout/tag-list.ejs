<%
const tags = site.tags.data;
%>

<div class="fade-in-down-animation">
    <div class="tag-list-container">
        <% if (site.tags.length > 0) { %>
            <div class="tag-list-content">
                <div class="site-all-tags">
                    <% tags.forEach(tag => { %>
                        <a href="<%- url_for(tag.path) %>" class="tag">
                            <%= tag.name %>
                            <span class="tag-count">(<%= tag.length %>)</span>
                        </a>
                    <% }); %>
                </div>
            </div>
        <% } else { %>
            <%- partial('_partial/common/empty-content') %>
        <% } %>
        <% if (page?.comment === true) { %>
            <%- partial('_partial/comment/comment') %>
        <% } %>
    </div>
</div> 